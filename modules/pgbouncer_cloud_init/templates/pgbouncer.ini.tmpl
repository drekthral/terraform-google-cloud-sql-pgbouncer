[databases]
%{ for user in users ~}
${user.db_name} = host=${db_host} port=${db_port} user=${user.name} auth_user=${user.name} dbname=${user.db_name} password=${user.password}
%{ endfor ~}
* = host=nope port=nope user=nope auth_user=nope dbname=nope password=nope

[pgbouncer]
listen_addr = 0.0.0.0
listen_port = ${listen_port}
#unix_socket_dir =
#user = temp
auth_file = /etc/pgbouncer/userlist.txt
auth_type = md5

%{ if custom_config == "" ~}
%{ if auth_query != null && auth_user != null ~}
auth_query = ${auth_query}
auth_user = ${auth_user}
%{ endif ~}
max_db_connections = ${max_db_connections}
max_client_conn = ${max_client_conn}
pool_mode = ${pool_mode}
default_pool_size = ${default_pool_size}
admin_users = ${admin_users}
stats_users = ${admin_users}
ignore_startup_parameters = extra_float_digits, options
application_name_add_host = 1

%{~ else ~}
# Custom Config -------------------------------------------------------------- #

${custom_config}
%{~ endif ~}
